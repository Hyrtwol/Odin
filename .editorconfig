root = true

[*]
charset = utf-8
indent_style = tab
# end_of_line = lf # imho this should be handled by git
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.y{,a}ml]
indent_size = 2
indent_style = space
tab_width = 2

[*.odin]
indent_style = tab
max_line_length = off

[*.md]
indent_style = tab
max_line_length = off

